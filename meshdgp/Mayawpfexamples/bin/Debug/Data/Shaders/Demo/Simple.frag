varying vec3 normal;varying vec4 pos;void main(){	vec3 norm = normalize(normal); 	vec3 lightv = normalize( gl_LightSource[0].position.xyz - pos.xyz);	vec3 viewv = -normalize(pos.xyz);	vec3 halfv = normalize(lightv + viewv); 	vec4 diffuse = max(0.0, dot(lightv, norm))                   *gl_FrontMaterial.diffuse*gl_LightSource[0].diffuse; 	vec4 ambient = gl_FrontMaterial.ambient*gl_LightSource[0].ambient;     vec4 specular = vec4(0.0, 0.0, 0.0, 1.0);    if( dot(lightv, viewv) > 0.0)     {    specular = pow(max(0.0, dot(norm, halfv)),               gl_FrontMaterial.shininess)              *gl_FrontMaterial.specular              *gl_LightSource[0].specular;    }    vec3 color = clamp( vec3(ambient + diffuse + specular), 0.0, 1.0);     gl_FragColor = vec4(color, 1.0);}